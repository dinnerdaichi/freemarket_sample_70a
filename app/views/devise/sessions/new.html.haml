.login
  .login__header
    .login__header__logo
      = link_to image_tag("logo.png", class: "headerlogo"), root_path
  .login__main
    .login__main__in
      .login__main__in__no-account
        %pアカウントをお持ちでない方はこちらから
        .login__main__in__no-account__new
          = link_to "新規会員登録" ,new_user_registration_path
      .login__main__in__form
        %button.login__main__in__form__f(type="id")
          = link_to 'facebookでログイン', user_facebook_omniauth_authorize_path, method: :post
        %button.login__main__in__form__g(type="id")
          = link_to 'Googleでログイン', user_google_oauth2_omniauth_authorize_path, method: :post
      .login__main__in__form
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .login__main__in__form__input
            = f.email_field :email, class: 'input', placeholder: 'メールアドレス' 
            = f.password_field :password, class: 'input', placeholder: 'パスワード'
            .login__main__in__form__btn
              = f.submit 'ログイン', class: 'btn'
            = link_to "パスワードをお忘れの方","#",class: "link"
  .login__footer
    %ul.login__footer__etc
      %li
        = link_to "プライバシーポリシー","#",class: "link"
      %li
        = link_to "FURIMA利用規約","#",class: "link"
      %li
        = link_to "特定商取引に関する表記","#",class: "link"
    .login__footer__logo
      = link_to image_tag("logo-white.png", class: "footerlogo"), "#"
      %p.footer__company-name
        © FURIMA
